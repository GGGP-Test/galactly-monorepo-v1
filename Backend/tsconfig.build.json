{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "src/ui/**",
    "src/ai/**",
    "src/scripts/**",
    "node_modules",
    "dist"
  ]
}