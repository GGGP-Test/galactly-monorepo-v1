{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "."
  },
  "include": [
    "src/index.ts",
    "src/routes/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/ui/**",
    "src/scripts/**",
    "src/scorecard/**",
    "**/*.test.ts"
  ]
}