{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts",
    "src/routes/**/*.ts",
    "src/buyers/**/*.ts",
    "src/providers/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "src/ui/**",
    "src/scripts/**",
    "src/security/**",
    "src/scorecard/**",
    "src/ops/**"
  ]
}