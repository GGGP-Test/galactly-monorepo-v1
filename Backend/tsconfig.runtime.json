{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build-runtime",
    "rootDir": "src",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts",
    "src/routes/**/*.ts",
    "src/ai/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/workers/**",
    "src/core/**",
    "src/search-providers.ts",
    "src/**/*.test.ts"
  ]
}
