{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/index.ts",
    "src/auth.ts",
    "src/types.ts",
    "src/util.ts",
    "src/db.ts",
    "src/api/reveal.ts",
    "src/routes/public.ts",
    "src/routes/leads.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/ops/**",
    "src/workflows/**",
    "src/search-providers/**",
    "src/connectors/**",
    "src/reviews/**",
    "src/routes/pipeline.ts",
    "src/gate.ts",
    "src/cost-tracker.ts"
  ]
}
