{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": ["src/index.ts", "src/routes/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": [
    "src/ui/**",
    "src/workers/**",
    "src/security/**",
    "src/stripe.ts",
    "src/search-providers.ts",
    "src/connectors/**",
    "src/ops/**",
    "src/leadgen/**",
    "src/ai/**"
  ]
}
