{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/routes/**/*.ts"
  ],
  "exclude": [
    "src/ui/**",
    "src/server/**",
    "src/scripts/**",
    "src/security/**",
    "src/data/**",
    "src/ai/**",
    "src/ops/**",
    "src/**/__tests__/**",
    "src/**/*.test.ts"
  ]
}
