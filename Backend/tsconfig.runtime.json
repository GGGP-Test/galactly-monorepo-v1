{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/index.ts",
    "src/auth.ts",
    "src/api/**/*.ts",
    "src/routes/**/*.ts",
    "src/ai/**/*.ts",
    "src/workers/**/*.ts"
  ],
  "exclude": [
    "src/ops/**",
    "src/connectors/**",
    "src/reviews/**",
    "src/gate.ts",
    "src/targets.ts",
    "src/ui/**",
    "src/db/**",
    "src/orchestrator/**",
    "src/cost-tracker/**",
    "node_modules",
    "dist"
  ]
}
