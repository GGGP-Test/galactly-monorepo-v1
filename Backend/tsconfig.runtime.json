{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/routes/**/*.ts",
    "src/api/**/*.ts",
    "src/db.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/ai/**",
    "src/connectors/**",
    "src/runner/**",
    "src/ui/**",
    "src/server/**",
    "src/security/**",
    "src/stores/**",
    "src/core/**",
    "src/data/**",
    "src/leadgen/**",
    "src/scripts/**",
    "src/pipelines/**",
    "src/providers/**"
  ]
}
