{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "sourceMap": true
  },
  "include": ["src/index.ts"],           // compile only the entrypoint
  "exclude": ["**/*.spec.ts", "node_modules", "dist"]
}
