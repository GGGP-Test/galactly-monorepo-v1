{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "src/index.ts",
    "src/routes/public.ts",
    "src/api/reveal.ts",
    "src/db.ts"
  ]
}
