{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019"],
    "outDir": "build-runtime",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["node"]
  },
  "files": [
    "src/index.ts",
    "src/routes/index.ts",
    "src/routes/find.ts",
    "src/routes/buyers.ts",
    "src/routes/webscout.ts",
    "src/ai/llm.ts",
    "src/ai/webscout.ts"
  ]
}
