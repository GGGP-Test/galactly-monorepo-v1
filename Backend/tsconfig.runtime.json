{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/index.ts",
    "src/auth.ts",
    "src/api/**/*.ts",
    "src/routes/**/*.ts",
    "src/ai/**/*.ts",
    "src/workers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/ops/**",
    "src/connectors/**",
    "src/clients/**",
    "src/ui/**",
    "src/scripts/**",
    "src/**/*.test.ts"
  ]
}
