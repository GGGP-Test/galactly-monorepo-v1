{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": true
  },

  // Compile ONLY the pieces used by this runtime image
  "files": [
    "src/index.ts",
    "src/routes/public.ts",
    "src/api/reveal.ts",
    "src/db.ts",
    "src/why.ts"
  ]
}
